<!DOCTYPE hibernate-mapping PUBLIC
         "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
         "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="at.silverstrike.pcc.impl.persistence.DefaultMilestone"
		table="TBL_MILESTONE" lazy="false">
		<id name="id" column="MILESTONE_ID" type="java.lang.Long"
			unsaved-value="-1">
			<generator class="native">
			</generator>
		</id>
		<property name="name" />
		<property name="label" />
		<property name="priority" />

		<many-to-one name="parent"
			class="at.silverstrike.pcc.impl.persistence.DefaultTask"
			lazy="false"/>		
	</class>
</hibernate-mapping>