<!DOCTYPE hibernate-mapping PUBLIC
         "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
         "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="at.silverstrike.pcc.impl.persistence.DefaultSchedulingObject"
		table="TBL_SCHEDULING_OBJECT" lazy="false">
		<id name="id" column="SCHEDULING_OBJECT_ID" type="java.lang.Long"
			unsaved-value="-1">
			<generator class="native">
			</generator>
		</id>
		<property name="name" />
		<property name="priority" />
		<many-to-one name="parent"
			class="at.silverstrike.pcc.impl.persistence.DefaultSchedulingObject"
			lazy="false"/>
		
		<set name="predecessors" 
			lazy="false">
			<key column="SCHEDULING_OBJECT_ID" />
			<one-to-many
				class="at.silverstrike.pcc.impl.persistence.DefaultSchedulingObject" />
		</set>
		 
		 
		 
		 <joined-subclass
			name="at.silverstrike.pcc.impl.persistence.DefaultDailyLimitResourceAllocation"
			table="TBL_DAILY_LIMIT_RESOURCE_ALLOCATION"
			lazy="false">
			<key column="RESOURCE_ALLOCATION_ID" />
			<property name="dailyLimit" />
		</joined-subclass>
		 
		 
		 
		 <!-- Атрибуты, специфические для дела (начало) -->
		 		<property name="state" />
		<property name="bestCaseEffort" />
		<property name="worstCaseEffort" />
		<property name="averageEstimatedEndDateTime" />
		<property name="bestEstimatedEndDateTime" />
		<property name="worstEstimatedEndDateTime" />

		<bag name="resourceAllocations" lazy="false">
			<key column="PROCESS_ID" />
			<one-to-many
				class="at.silverstrike.pcc.impl.persistence.DefaultResourceAllocation" />
		</bag>

		 <!-- Атрибуты, специфические для дела (конец) -->
	</class>
</hibernate-mapping>