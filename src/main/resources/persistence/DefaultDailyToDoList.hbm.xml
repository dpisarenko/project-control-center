<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
         "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
         "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="at.silverstrike.pcc.impl.persistence.DefaultDailyToDoList"
		table="TBL_DAILY_TO_DO_LIST" dynamic-update="false" dynamic-insert="false">

		<id name="id" column="DAILY_TO_DO_LIST_ID" type="java.lang.Long"
			unsaved-value="-1">
			<generator class="native">
			</generator>
		</id>

		<bag name="tasksToCompleteToday">
			<key column="PROCESS_ID" />
			<one-to-many
				class="at.silverstrike.pcc.impl.persistence.DefaultResourceAllocation" />
		</bag>
	</class>
</hibernate-mapping>
