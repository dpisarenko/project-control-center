<!DOCTYPE hibernate-mapping PUBLIC
         "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
         "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="at.silverstrike.pcc.impl.persistence.DefaultDailyToDoList"
		table="TBL_DAILY_TO_DO_LIST">

		<id name="id" column="DAILY_TO_DO_LIST_ID" type="java.lang.Long"
			unsaved-value="-1">
			<generator class="native">
			</generator>
		</id>

		<bag name="tasksToCompleteToday" lazy="false" cascade="delete">
			<key column="DAILY_TO_DO_LIST_ID" />
			<many-to-many column="DAILY_TO_DO_LIST_ITEM_ID"
				class="at.silverstrike.pcc.impl.persistence.DefaultSchedulingObject" />
		</bag>
	</class>
</hibernate-mapping>
