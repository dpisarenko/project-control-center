<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
         "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
         "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="at.silverstrike.pcc.impl.persistence.DefaultDailyPlan"
		table="TBL_DAILY_PLAN">

		<id name="id" column="DAILY_PLAN_ID" type="java.lang.Long"
			unsaved-value="-1">
			<generator class="native">
			</generator>
		</id>

		<property name="date" />
		<many-to-one name="resource"
			class="at.silverstrike.pcc.impl.persistence.DefaultResource"/>
		<one-to-one name="toDoList"
			class="at.silverstrike.pcc.impl.persistence.DefaultDailyToDoList" />
		<one-to-one name="schedule"
			class="at.silverstrike.pcc.impl.persistence.DefaultDailySchedule" />
	</class>
</hibernate-mapping>
