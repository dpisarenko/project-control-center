<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
         "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
         "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="at.silverstrike.pcc.impl.persistence.DefaultDailySchedule"
		table="TBL_DAILY_SCHEDULE" dynamic-update="false" dynamic-insert="false">

		<id name="id" column="DAILY_SCHEDULE_ID" type="java.lang.Long"
			unsaved-value="-1">
			<generator class="native">
			</generator>
		</id>

		<bag name="bookings" embed-xml="false">
			<key column="DAILY_SCHEDULE_ID" />
			<one-to-many class="at.silverstrike.pcc.impl.persistence.DefaultBooking" />
		</bag>
	</class>
</hibernate-mapping>
