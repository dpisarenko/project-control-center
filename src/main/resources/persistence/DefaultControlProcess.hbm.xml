<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
         "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
         "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="at.silverstrike.pcc.impl.persistence.DefaultControlProcess"
		table="TBL_PROCESS">

		<id name="id" column="PROCESS_ID" type="java.lang.Long"
			unsaved-value="-1">
			<generator class="native">
			</generator>
		</id>
		<property name="name" />
		<property name="state" />
		<property name="bestCaseEffort" />
		<property name="worstCaseEffort" />
		<property name="priority" />
		<property name="processType" />
		<property name="averageEstimatedEndDateTime" />
		<property name="bestEstimatedEndDateTime" />
		<property name="worstEstimatedEndDateTime" />

		<many-to-one name="parent"
			class="at.silverstrike.pcc.impl.persistence.DefaultControlProcess"/>

		<bag name="resourceAllocations">
			<key column="PROCESS_ID" />
			<one-to-many
				class="at.silverstrike.pcc.impl.persistence.DefaultResourceAllocation" />
		</bag>

		<set name="predecessors">
			<key column="PREDECESSOR_ID" />
			<one-to-many
				class="at.silverstrike.pcc.impl.persistence.DefaultControlProcess" />
		</set>

	</class>
</hibernate-mapping>
