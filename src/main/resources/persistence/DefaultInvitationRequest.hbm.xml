<!DOCTYPE hibernate-mapping PUBLIC
         "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
         "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="at.silverstrike.pcc.impl.persistence.DefaultInvitationRequest"
		table="TBL_INVITATION_REQUEST">

		<id name="id" column="INVITATION_REQUEST_ID" type="java.lang.Long"
			unsaved-value="-1">
			<generator class="native">
			</generator>
		</id>
		<property name="submissionDateTime" />
		<property name="status" />
		<property name="email" />
		<property name="password" />		
	</class>
</hibernate-mapping>
